{
  "name": "delayed-messaging-backend",
  "version": "1.0.0",
  "description": "Backend service for the Delayed Messaging System",
  "main": "dist/app.js",
  "scripts": {
    "start": "node dist/app.js",
    "dev": "nodemon",
    "build": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "jest --config jest.e2e.config.ts",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "migrate": "prisma migrate deploy",
    "migrate:dev": "prisma migrate dev",
    "seed": "ts-node prisma/seed.ts",
    "db:reset": "prisma migrate reset",
    "security:audit": "npm audit",
    "docker:build": "docker build -t delayed-messaging-backend .",
    "docker:run": "docker run -p 3000:3000 delayed-messaging-backend",
    "format": "prettier --write \"src/**/*.ts\"",
    "prepare": "husky install"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@aws-sdk/client-kms": "^3.0.0",
    "@prisma/client": "4.x",
    "@sendgrid/mail": "^7.7.0",
    "apn": "^2.2.0",
    "argon2": "^0.30.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "date-fns": "^2.30.0",
    "dotenv": "^16.0.3",
    "express": "^4.18.0",
    "express-rate-limit": "^6.7.0",
    "firebase-admin": "^11.0.0",
    "helmet": "^7.0.0",
    "ioredis": "5.x",
    "jsonwebtoken": "^9.0.0",
    "morgan": "^1.10.0",
    "opossum": "^6.0.0",
    "pino": "^8.14.1",
    "prom-client": "^14.0.0",
    "rate-limiter-flexible": "^2.4.1",
    "socket.io": "4.x",
    "socket.io-rate-limiter": "^3.0.0",
    "uuid": "^9.0.0",
    "validator": "^13.9.0",
    "winston": "^3.8.2",
    "winston-daily-rotate-file": "^4.7.0",
    "xss": "^1.0.14",
    "zod": "3.x"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.0.0",
    "@jest/globals": "29.x",
    "@jest/types": "29.x",
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "29.x",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/morgan": "^1.9.4",
    "@types/node": "^18.16.0",
    "@types/socket.io": "^3.0.2",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^9.0.1",
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.59.0",
    "eslint": "^8.39.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.5",
    "husky": "^8.0.3",
    "ioredis-mock": "^8.0.0",
    "jest": "29.x",
    "jest-mock": "^29.0.0",
    "lint-staged": "^13.2.1",
    "mockdate": "3.x",
    "nodemon": "^2.0.22",
    "prettier": "^2.8.8",
    "prisma": "4.x",
    "supertest": "^7.0.0",
    "ts-jest": "29.x",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  },
  "prisma": {
    "schema": "prisma/schema.prisma"
  },
  "nodemonConfig": {
    "watch": ["src"],
    "ext": ".ts,.js",
    "exec": "ts-node ./src/app.ts"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/organization/delayed-messaging.git"
  },
  "keywords": [
    "delayed-messaging",
    "messaging",
    "nodejs",
    "typescript",
    "express",
    "socket.io"
  ]
}