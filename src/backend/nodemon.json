{
  "watch": [
    "src/**/*"
  ],
  "ext": "ts,js,json",
  "ignore": [
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "src/**/*.d.ts",
    "node_modules",
    "dist"
  ],
  "exec": "ts-node --files src/app.ts",
  "env": {
    "NODE_ENV": "development",
    "TS_NODE_PROJECT": "./tsconfig.json"
  },
  "delay": "1000",
  "verbose": true,
  "restartable": "rs"
}